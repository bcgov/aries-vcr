{
  "name": "vcr-web",
  "version": "2.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/bcgov/indy-catalyst.git"
  },
  "description": "TheOrgBook web interface component",
  "license": "Apache-2.0",
  "scripts": {
    "ng": "ng",
    "dev": "run-p --print-label --silent start watch-theme",
    "start": "node build-theme.js && node --trace-warnings ./node_modules/\\@angular/cli/bin/ng serve --host 0.0.0.0 --port 8080 --base-href ${NG_BASE_HREF:-/} --deploy-url ${NG_DEPLOY_URL:-/} --configuration ${NG_ENV:-dev} --poll 2000",
    "build": "node build-theme.js && ng build --prod --base-href ${NG_BASE_HREF:-/} --deploy-url ${NG_DEPLOY_URL:-/} ${NG_BUILD_FLAGS:-}",
    "watch-theme": "node watch-theme.js",
    "inspect": "node build-theme.js && node --inspect=${DEBUG_PORT-9229} --debug-brk -- node_modules/\\@angular/cli/bin/ng serve -o --base-href ${NG_BASE_HREF:-/} --deploy-url ${NG_DEPLOY_URL:-/} --configuration ${NG_ENV:-dev}\"",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "dependencies": {
    "@angular/animations": "~11.0.2",
    "@angular/common": "~11.0.2",
    "@angular/compiler": "~11.0.2",
    "@angular/core": "~11.0.2",
    "@angular/forms": "~11.0.2",
    "@angular/platform-browser": "~11.0.2",
    "@angular/platform-browser-dynamic": "~11.0.2",
    "@angular/router": "~11.0.2",
    "@ng-bootstrap/ng-bootstrap": "^3.0.0",
    "@ngx-translate/core": "^10.0.0",
    "@ngx-translate/http-loader": "^3.0.0",
    "bootstrap": "~4.3.1",
    "compare-versions": "~3.1.0",
    "copy-webpack-plugin": "^5.1.2",
    "core-js": "~2.5.4",
    "font-awesome": "^4.7.0",
    "localize-router": "https://github.com/andrewwhitehead/localize-router/releases/download/v2.0.0-RC.2/localize-router-2.0.0-RC.2.tgz",
    "localize-router-http-loader": "~1.0.2",
    "node-sass": "^4.14.1",
    "rxjs": "~6.6.3",
    "rxjs-compat": "~6.3.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1100.2",
    "@angular-devkit/build-optimizer": "^0.6.8",
    "@angular/cli": "^11.0.2",
    "@angular/compiler-cli": "~11.0.2",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "protractor": "~7.0.0",
    "ts-node": "~5.0.1",
    "tslint": "~6.1.0",
    "typescript": "~4.0.5",
    "webpack": "^4.44.2"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  }
}
